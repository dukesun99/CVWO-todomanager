<% provide(:title, 'My tasks') %>
<h1>All team tasks for Team <%= @team_now.name%></h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>due_date</th>
      <th>category</th>
    </tr>
  </thead>
  <tbody>
    <% if !@tasks.nil? %>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.due_date %></td>
        <td><%= task.category %></td>
        <td><%= link_to "details", task %></td>
        <td><%= link_to "delete", task, method: :delete,
                                  data: { confirm: "You sure?" } %></td>
      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>
<div class="center">
  <%= link_to "New task", new_task_path, class: "btn btn-primary"%>
</div>
