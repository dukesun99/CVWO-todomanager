<div class="center jumbotron">
  <h1>Welcome to my todo manager</h1>

  <h2>
    This is the home page for the
    todo manager.
  </h2>
  <% if current_user.nil? %>
    <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
  <% else %>
    <%= link_to "View my tasks", my_tasks_path(current_user), class: "btn btn-lg btn-primary" %>
  <% end %>
</div>

